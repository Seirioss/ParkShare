<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ych.parkshare.ParkRentActivity" >
    
<!-- title -->
    <TextView
        android:id="@+id/activity_park_rent_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/rentparkinfo"
        android:textSize="20dp" 
        android:textColor="@color/white"/>
<!--  停车场地址 -->
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parkdetail_switch_control"
        android:layout_marginTop="5dp"
        android:text="@string/parkaddress"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/textView1"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center_vertical"
        android:background="@drawable/parkinfo_text_background" 
        android:textColor="@color/darkslategray"/>
<!-- 开始时间 -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:layout_marginTop="5dp"
        android:text="@string/activity_text_starttime" 
        android:textColor="@color/white"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/activity_park_rent_text_starttime"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/textView2"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center_vertical"
        android:background="@drawable/parkinfo_text_background" 
        android:textColor="@color/darkslategray"/>
<!-- 結束時間 -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_park_rent_text_starttime"
        android:layout_marginTop="5dp"
        android:text="@string/activity_text_endtime" 
        android:textColor="@color/white"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/activity_park_rent_text_endtime"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/textView5"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center_vertical"
        android:background="@drawable/parkinfo_text_background" 
        android:textColor="@color/darkslategray"/>
<!-- 车位描述 -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_marginTop="5dp"
        android:text="@string/parkdescription" 
        android:textColor="@color/white"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/textView3"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center_vertical"
        android:background="@drawable/parkinfo_text_background"
        android:textColor="@color/darkslategray" />
    
<!-- 备注 -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_park_rent_text_endtime"
        android:layout_marginTop="5dp"
        android:text="@string/remark" 
        android:textColor="@color/white"
        android:textSize="18dp"/>  
    
    <TextView
        android:id="@+id/remarks"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center_vertical"
        android:background="@drawable/parkinfo_text_background"
        android:textColor="@color/darkslategray" />

     <Switch
        android:id="@+id/parkdetail_switch_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_park_rent_text_title"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:textOff="@string/closepark"
        android:textOn="@string/openpark" 
        /> 

