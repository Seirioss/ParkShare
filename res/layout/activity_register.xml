<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/register_background"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="2dp"
    android:paddingTop="2dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/loginformbackground"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/register_username"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/register_user" />

        <EditText
            android:id="@+id/register_userEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:hint="@string/registername"
            android:background="@null" >

            <requestFocus />
        </EditText>
    </LinearLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.22dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="#CCCCCC"/>
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/loginformbackground"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/register_password"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/register_key" />

        <EditText
            android:id="@+id/passwordEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:hint="@string/registerpassword"
            android:background="@null" >

            <requestFocus />
        </EditText>
     </LinearLayout>
     
  <View 
        android:layout_width="match_parent"
        android:layout_height="0.22dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="#CCCCCC"/>
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/loginformbackground"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/register_passconfirm"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/register_key" />

        <EditText
            android:id="@+id/passconfirmEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:hint="@string/registerconfirmpass"
            android:background="@null" >

            <requestFocus />
        </EditText>
     </LinearLayout>
     
      <View 
        android:layout_width="match_parent"
        android:layout_height="0.22dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="#CCCCCC"/>
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/loginformbackground"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/register_mailbox"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/register_mail" />

        <EditText
            android:id="@+id/mailEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:hint="@string/registeremail"
            android:background="@null" >

            <requestFocus />
        </EditText>
     </LinearLayout>
    
      <View 
        android:layout_width="match_parent"
        android:layout_height="0.22dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="#CCCCCC"/>
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/loginformbackground"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/register_cellphone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/register_phone" />

        <EditText
            android:id="@+id/phoneEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:hint="@string/registertelephone"
            android:background="@null" >

            <requestFocus />
        </EditText>
     </LinearLayout>
     
    <Button
        android:id="@+id/buttonregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="100dp"
        android:text="@string/registersure"
        android:textColor="#FFFFFF"
        android:background="@drawable/signupbuttonbackground"/>
    
    </LinearLayout>
